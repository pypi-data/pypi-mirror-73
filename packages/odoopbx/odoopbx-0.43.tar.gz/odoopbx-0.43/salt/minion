master_type: disable
file_client: local
master_tries: -1
master_alive_interval: 10
auth_tries: -1
ping_interval: 1 # minutes
recon_randomize: False


# And define back other options that by default use root_dir directory to prepend.
pki_dir: /etc/odoopbx/pki/minion
cachedir: /var/cache/odoopbx/minion
log_file: /var/log/odoopbx/minion
sock_dir: /var/run/odoopbx/minion
pidfile: /var/run/odoopbx.pid

# By default it is True and salt removes all contents of extension_modules folder.
clean_dynamic_modules: False 

# The legacy style will no longer be available starting in the Sodium release
use_superseded:
  - module.run

# Execute startup
startup_states: sls
sls_list:
  - security
  - start

# Include files that are copies on first run of odoopbx CLI.
include: /etc/odoopbx/*.conf
