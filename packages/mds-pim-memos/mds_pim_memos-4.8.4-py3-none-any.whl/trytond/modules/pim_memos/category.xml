<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.ui.view" id="memocategory_view_list">
            <field name="model">pim_memos.category</field>
            <field name="type">tree</field>
            <field name="priority" eval="10"/>
            <field name="name">category_list</field>
        </record>
        <record model="ir.ui.view" id="memocategory_view_tree">
            <field name="model">pim_memos.category</field>
            <field name="type">tree</field>
            <field name="priority" eval="20"/>
            <field name="field_childs">childs</field>
            <field name="name">category_tree</field>
        </record>
        <record model="ir.ui.view" id="memocategory_view_form">
            <field name="model">pim_memos.category</field>
            <field name="type">form</field>
            <field name="name">category_form</field>
        </record>

        <record model="ir.action.act_window" id="act_memocategory_tree">
            <field name="name">Categories</field>
            <field name="res_model">pim_memos.category</field>
            <field name="domain" eval="[('parent', '=', None)]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_memocategory_tree_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="memocategory_view_tree"/>
            <field name="act_window" ref="act_memocategory_tree"/>
        </record>
        <record model="ir.action.act_window.view" id="act_memocategory_tree_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="memocategory_view_form"/>
            <field name="act_window" ref="act_memocategory_tree"/>
        </record>

        <menuitem parent="menu_pimmemos_note_tree" sequence="10"
            action="act_memocategory_tree" id="menu_memocategory_tree2"/>

        <record model="ir.action.act_window" id="act_memocategory_list">
            <field name="name">Categories</field>
            <field name="res_model">pim_memos.category</field>
        </record>
        <record model="ir.action.act_window.view" id="act_memocategory_list_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="memocategory_view_list"/>
            <field name="act_window" ref="act_memocategory_list"/>
        </record>
        <record model="ir.action.act_window.view" id="act_memocategory_list_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="memocategory_view_form"/>
            <field name="act_window" ref="act_memocategory_list"/>
        </record>
        <menuitem parent="menu_memocategory_tree2"
            sequence="10" id="menu_memocategory_list"
            action="act_memocategory_list"/>

        <!-- permissions -->
        <record model="ir.model.access" id="access_pim_memocategory_anon">
            <field name="model" search="[('model', '=', 'pim_memos.category')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>

    </data>
</tryton>
