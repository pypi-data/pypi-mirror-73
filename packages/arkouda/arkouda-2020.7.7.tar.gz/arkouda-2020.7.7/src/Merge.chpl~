module Merge {
  use SegmentedArray;

  /* Given a *sorted* array of strings, use binary search to find a target string.
   */
  proc SegString.binarySearch(s: string) {
    var l = 0;
    var r = this.size;
    while l <= r {
      var mid = l + (r - l)/2;
      if this[mid] == s {
        return mid;
      } else if this[mid] < s {
        l = mid + 1;
      } else if this[mid] > s {
        r = mid - 1;
      }
    }
    return -1;
  }
}